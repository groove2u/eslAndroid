<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="170dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5sp"
        android:text="락토핏 생유산균  할인2+1"/>
    <TextView
        android:id="@+id/tvSaleType"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTitle"
        android:textStyle="normal"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="22sp"
        android:layout_centerVertical="true"
        android:text="1+1"/>
    <TextView
        android:id="@+id/tvDiscount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ff4a46"
        android:lineSpacingExtra="22sp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/tvSaleType"
        android:text="20%"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingExtra="22sp"
        android:layout_toLeftOf="@+id/tvPriceDummy"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:text="24,800"/>
    <TextView
        android:id="@+id/tvPriceDummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#000000"
        android:lineSpacingExtra="22sp"
        android:layout_toLeftOf="@+id/btnDetail"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:text="원"/>
    <ImageView
        android:id="@+id/btnDetail"
        android:layout_width="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:background="@drawable/btn" />
</RelativeLayout>